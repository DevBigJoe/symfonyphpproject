<nav
    x-data="{
        mobileMenuOpen: false,
        servicesOpen: false,
        scrolled: false
    }"
    x-init="window.addEventListener('scroll', () => { scrolled = window.scrollY > 20 })"
    :class="scrolled ? 'bg-white/95 backdrop-blur-md shadow-md' : 'bg-white'"
    class="sticky top-0 z-50 transition-all duration-300"
>
    <div class="container-wide">
        <div class="flex items-center justify-between h-16 md:h-20">

            {# Logo / Brand #}
            <div class="flex-shrink-0">
                <a href="/" class="flex items-center space-x-2">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-primary-800 rounded -lg flex items-center justify-center">
                        <span class="text-white font-bold text-xl">L</span>
                    </div>
                    <span class="text-xl font-bold text-slate-900 hidden sm:block">StudyShare</span>
                </a>
            </div>

            {# Desktop Navigation #}
            <div class="hidden md:flex md:items-center md:space-x-8">
                <a href="/" class="text-slate-700 hover:text-primary-600 font-medium">
                    Home
                </a>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/degrees" class="text-slate-700 hover:text-primary-600 font-medium">
                        Content
                    </a>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/overview" class="text-slate-700 hover:text-primary-600 font-medium">
                        {% if is_granted('ROLE_REDAKTION') %}
                        Alle Artikel
                        {% else %}
                        Meine Artikel
                        {% endif %}
                    </a>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/profile" class="text-slate-700 hover:text-primary-600 font-medium">
                        Profil
                    </a>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                <a href="/admin/users" class="text-slate-700 hover:text-primary-600 font-medium">
                    Admin
                </a>
                {% endif %}

                {# CTA Button #}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/logout" class="bg-primary-600 hover:bg-primary-600 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                    Logout
                </a>
                {% else %}

                    <a href="/login" class="bg-primary-600 hover:bg-primary-600 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                        Login
                    </a>

                {% endif %}

            </div>

            {# Mobile Menu Button #}
            <div class="md:hidden">
                <button
                    @click="mobileMenuOpen = true"
                    class="text-slate-700 hover:text-primary-600 focus:outline-none"
                    aria-label="Open menu"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    {# Mobile Menu Overlay #}
    <div
        x-show="mobileMenuOpen"
        x-transition:enter="transition-opacity ease-linear duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-linear duration-300"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click="mobileMenuOpen = false"
        class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-40 md:hidden"
        style="display: none;"
    ></div>

    {# Mobile Menu Panel #}
    <div
        x-show="mobileMenuOpen"
        x-transition:enter="transition ease-in-out duration-300 transform"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition ease-in-out duration-300 transform"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        @click.away="mobileMenuOpen = false"
        class="fixed top-0 right-0 bottom-0 w-80 max-w-full bg-white shadow-2xl z-50 md:hidden overflow-y-auto"
        style="display: none;"
    >
        {# Mobile Menu Header #}
        <div class="flex items-center justify-between p-4 border-b border-slate-200">
            <span class="text-lg font-bold text-slate-900">Menu</span>
            <button
                @click="mobileMenuOpen = false"
                class="text-slate-500 hover:text-slate-700 focus:outline-none"
                aria-label="Close menu"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        {# Mobile Menu Items #}
        <div class="p-4 space-y-2">
                <a href="/" class="block px-4 py-3 text-slate-700 hover:bg-slate-50 hover:text-primary-600 rounded-lg font-medium">
                    Home
                </a>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/degrees" class="block px-4 py-3 text-slate-700 hover:bg-slate-50 hover:text-primary-600 rounded-lg font-medium">
                        Content
                    </a>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/overview" class="block px-4 py-3 text-slate-700 hover:bg-slate-50 hover:text-primary-600 rounded-lg font-medium">
                        {% if is_granted('ROLE_REDAKTION') %}
                        Alle Artikel
                        {% else %}
                        Meine Artikel
                        {% endif %}
                    </a>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/profile" class="block px-4 py-3 text-slate-700 hover:bg-slate-50 hover:text-primary-600 rounded-lg font-medium">
                        Profil
                    </a>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                <a href="/admin/users" class="block px-4 py-3 text-slate-700 hover:bg-slate-50 hover:text-primary-600 rounded-lg font-medium">
                    Admin
                </a>
                {% endif %}

                {# CTA Button #}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/logout" class="block bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-medium text-center">
                    Logout
                </a>
                {% else %}

                    <a href="/login" class="block bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-medium text-center">
                        Login
                    </a>

                {% endif %}        
            </div>
        </div>
    </div>
</nav>
