{% extends '@default/base.html.twig' %}

{% block body %}
<section class="section-spacing bg-white">
    <div class="container-narrow">
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-2">
                Profil bearbeiten
            </h1>
        </div>
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="mb-4">
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500' ~ (form.email.vars.errors|length > 0 ? ' border-red-500' : '')}}) }}
                <div class="mt-1 form-error">
                    {{ form_errors(form.email, {'attr': {'class': 'text-sm text-red-600'}}) }}
                </div>
            </div>
            <div class="mb-4">
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500' ~ (form.name.vars.errors|length > 0 ? ' border-red-500' : '')}}) }}
                <div class="mt-1 form-error">
                    {{ form_errors(form.name, {'attr': {'class': 'text-sm text-red-600'}}) }}
                </div>
            </div>
            <div class="flex gap-4">
                <button type="submit" class="px-6 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                    Speichern
                </button>
            </div>
        {{ form_end(form) }}
        <a href="/profile/editPassword"
        class="inline-block px-6 py-2 bg-primary-600 text-white font-semibold rounded-lg
                hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
            Passwort Ã¤ndern
        </a>
    </div>
</section>

{% endblock %}