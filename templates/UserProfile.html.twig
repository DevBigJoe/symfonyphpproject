{% extends '@default/base.html.twig' %}

{% block body %}
<section class="section-spacing bg-white">
    <div class="container-narrow">
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">
                Profil
            </h1>
            <div class="mb-4 grid">
                <span class="text-xl text-slate-900">E-Mail:</span>
                <span class="text-xl text-slate-900">{{ app.user.email }}</span>
            </div>

            <div class="mb-4 grid">
                <span class="text-xl text-slate-900">Benutzername:</span>
                <span class="text-xl text-slate-900">{{ app.user.name }}</span>
            </div>
            <button type="button" class="px-6 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2" onclick="location.href='profile/edit';">
                Bearbeiten 
            </button>
        </div>
    </div>
</section>

{% endblock %}