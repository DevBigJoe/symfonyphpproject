{% extends 'base.html.twig' %}

{% block title %}Log in
{% endblock %}

{% block body %}
	<section class="section-spacing bg-white">
		<div class="container-narrow">
			<div class="mb-8">
				<h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-2">
					Log in
				</h1>
			</div>
			<form action="{{ path('app_login') }}" method="post" class="space-y-6">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
				<label for="username">Email:</label>
				<input style="background-color: #10c2009c" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
				<label for="password">Password:</label>
				<input style="background-color: #10c2009c" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
				<input
				type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

				{#
					Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					See https://symfony.com/doc/current/security/remember_me.html
		
					<div class="checkbox mb-3">
						<input type="checkbox" name="_remember_me" id="_remember_me">
						<label for="_remember_me">Remember me</label>
					</div>
				#}

				<div class="flex gap-4">
					<button type="submit" class="px-6 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
						Sign in
					</button>
				</div>
			</form>
		</div>
	</section>
{% endblock %}
